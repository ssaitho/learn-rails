%h1 新規作成
= form_with model: @player, html: {class: 'form-container'} do |form|
  .form-input
    = form.label '名前'
    = form.text_field :name
  .form-input
    = form.label '年齢'
    = form.text_field :age
  .form-input
    = form.label '誕生日'
    = form.text_field :birthday
  .form-input
    = form.label '身長'
    = form.text_field :height
  .form-input
    = form.label '体重'
    = form.text_field :weight
  .form-input
    = form.label '出身地'
    = form.text_field :hometown
  .form-input
    = form.label '投打'
    = form.text_field :pitching_and_batting
  .button-container
    = form.submit '作成', class: 'link-button'
